
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /srv/roda-app/public;

	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location @app {
		proxy_pass http://127.0.0.1:9292;
		include proxy_params;
	}

	location / {
		try_files $uri $uri.html @app;
	}
}
