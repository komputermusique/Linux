<div class="grid-x grid-padding-x">
  <div class="large-12 cell">
    <h3>Войдите в систему</h3>
  </div>
</div>


<form method="post">
  <div class="grid-x grid-padding-x">
    <div class="medium-6 cell">
      <label>Имя пользователя
        <input type="text" placeholder=".medium-6.cell" name="user" 
        value="<%= @user %>"
        >
      </label>
    </div>
    <div class="medium-6 cell">
      <label>Пароль польователя
        <input type="password" placeholder=".medium-6.cell" name="password">
      </label>
    </div>
    <div class="medium-12 cell">
      <input type="submit" value="Войти" class="button">
    </div>
  </div>
</form>
